        <i3dMapping id="testArea2Start" node="0>0|4|1" />
        <i3dMapping id="testArea2End" node="0>0|4|1|0" />
        <i3dMapping id="tipOcclusionUpdateArea1Start" node="0>0|5|0" />
        <i3dMapping id="tipOcclusionUpdateArea1End" node="0>0|5|0|0" />
        <i3dMapping id="aiSpline" node="0>0|6|0" />

        
        
    </i3dMappings>
