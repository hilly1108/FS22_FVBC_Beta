<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="sellingStation" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>Train Conveyor Silo</name>
        <image>$data/placeables/sellingStationGeneric/store_sellingStationGeneric.png</image>
        <price>1</price>
        <canBeSold>false</canBeSold>
        <showInStore>false</showInStore>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>sellingPoints</category>
        <brush>
            <type>placeable</type>
            <category>production</category>
            <tab>sellingPoints</tab>
        </brush>
        <vertexBufferMemoryUsage>367104</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>36096</indexBufferMemoryUsage>
        <textureMemoryUsage>2097152</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
        <audioMemoryUsage>0</audioMemoryUsage>
    </storeData>

    <base>
        <filename>maps/placeables/sellingStationGeneric/sellingStationSiloTop.i3d</filename>
			 <canBeRenamed>true</canBeRenamed>
    <!--    <boughtWithFarmland>true</boughtWithFarmland>-->
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" >
        <sounds>
            <place template="largeImp" />
        </sounds>
    </placement>
    
    <hotspots>
        <hotspot type="UNLOADING" linkNode="0>3" teleportNode="0>4"/>
    </hotspots>

    <clearAreas></clearAreas>

    <leveling></leveling>

    <indoorAreas></indoorAreas>
    
        <ai>
        <updateAreas>
            <updateArea startNode="tipOcclusionUpdateArea1Start" endNode="tipOcclusionUpdateArea1End" />
        </updateAreas>

    </ai>

    <sellingStation supportsExtension="false" litersForFullPriceDrop="200000" fullPriceRecoverHours="48">
        <unloadTrigger exactFillRootNode="0>0"  fillTypes="WHEAT BARLEY CANOLA SUNFLOWER SOYBEAN MAIZE OAT RYE SORGHUM"/>
        <fillType name="wheat"            priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="barley"           priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="canola"           priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="sunflower"        priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="soybean"          priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="maize"            priceScale="1.1" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="oat"            priceScale="0.95" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="sorghum"            priceScale="0.95" supportsGreatDemand="true" disablePriceDrop="false" />
        <fillType name="rye"            priceScale="0.95" supportsGreatDemand="true" disablePriceDrop="false" />
    </sellingStation>
    
    	<triggerMarkers>
        <triggerMarker node="0>0" filename="$data/shared/assets/marker/markerIcons.xml" id="UNLOAD" />

    </triggerMarkers>

  
    <i3dMappings>

        <i3dMapping id="unloadTrigger" node="0>3" />

        
        <i3dMapping id="tipOcclusionUpdateArea1Start" node="0>6" />
        <i3dMapping id="tipOcclusionUpdateArea1End" node="0>6|0" />
    </i3dMappings>
</placeable>
