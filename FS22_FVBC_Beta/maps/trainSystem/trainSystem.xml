<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="trainSystem" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>TrainSystem</name>
        <image>$data/store/store_empty.png</image>
        <price>1</price>
        <canBeSold>false</canBeSold>
        <showInStore>false</showInStore>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>placeableMisc</category>
        <vertexBufferMemoryUsage>874008</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>64</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>
    </storeData>

    <base>
        <filename>maps/trainSystem/trainSystem.i3d</filename>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" />

    <hotspots>
        <hotspot type="TRAIN" linkNode="0>2|1" teleportNode="0>2|2" text="$l10n_hotspot_rentTrain" />
        <hotspot type="TRAIN" linkNode="0>3|1" teleportNode="0>3|2" text="$l10n_hotspot_rentTrain" />
        <hotspot type="TRAIN" linkNode="0>4|1" teleportNode="0>4|2" text="$l10n_hotspot_rentTrain" />
    </hotspots>

    <triggerMarkers>
        <triggerMarker node="0>2|1" filename="$data/shared/assets/marker/markerIcons.xml" id="EXCLAMATION_MARK" adjustToGround="true" />
        <triggerMarker node="0>3|1" filename="$data/shared/assets/marker/markerIcons.xml" id="EXCLAMATION_MARK" adjustToGround="true" />
        <triggerMarker node="0>4|1" filename="$data/shared/assets/marker/markerIcons.xml" id="EXCLAMATION_MARK" adjustToGround="true" />
    </triggerMarkers>

    <ai>
        <updateAreas></updateAreas>
    </ai>

    <trainSystem>
        <rent pricePerHour="1000"/>
        <spline node="0" splineYOffset="0.155" />

        <drivingRange startNode="1|0" endNode="1|1" sellingStationId="sellingStationTrain"/>

        <train>
            <vehicle xmlFilename="maps/trainSystem/train/locomotive04.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonSugarbeets/wagonSugarbeets.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonGrain/wagonGrain.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonWoodChips/wagonWoodChips.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonTimber/wagonTimber.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonTimber/wagonTimber.xml" />
            <vehicle xmlFilename="$data/vehicles/train/wagonVehicles/wagonVehicles.xml" />
        </train>

        <railroadCallers>
            <railroadCaller triggerNode="0>2|0" />
            <railroadCaller triggerNode="0>3|0" />
            <railroadCaller triggerNode="0>4|0" />
        </railroadCallers>

        <railroadCrossings>
            <!-- EAST -->
            <railroadCrossing rootNode="0>5">
                <activation startDistance="200" endDistance="200" />
                <gates>
                    <gate node="0>5|0|0" startRot="0 0 0"   endRot="90 0 0"    duration="4" closingOffset="2" />
                    <gate node="0>5|1|0" startRot="0 0 0"   endRot="90 0 0"    duration="4" closingOffset="2"/>
                </gates>
                <trafficBlockers>
                    <blocker node="0>5|0|1" />
                    <blocker node="0>5|1|1" />
                </trafficBlockers>
                <signals>
                    <signal node="0>5|0|2|0" alternatingLights="true" />
                    <signal node="0>5|1|2|0" alternatingLights="true" />
                </signals>
                <sounds>
                    <crossing template="TRAIN_CROSSING_BELL_01" linkNode="0>5" />
                </sounds>
            </railroadCrossing>

            <!-- MIDDLE -->
            <railroadCrossing rootNode="0>6">
                <activation startDistance="200" endDistance="200" />
                <gates>
                    <gate node="0>6|0|0" startRot="0 0 0"   endRot="90 0 0"    duration="4" closingOffset="2" />
                    <gate node="0>6|1|0" startRot="0 0 0"   endRot="90 0 0"    duration="4" closingOffset="2"/>
                </gates>
                <trafficBlockers>
                    <blocker node="0>6|0|1" />
                    <blocker node="0>6|1|1" />
                </trafficBlockers>
                <signals>
                    <signal node="0>6|0|2|0" alternatingLights="true" />
                    <signal node="0>6|1|2|0" alternatingLights="true" />
                </signals>
                <sounds>
                    <crossing template="TRAIN_CROSSING_BELL_01" linkNode="0>6" />
                </sounds>
            </railroadCrossing>
        </railroadCrossings>
    </trainSystem>

    <clearAreas></clearAreas>

    <leveling></leveling>

    <indoorAreas></indoorAreas>

</placeable>
