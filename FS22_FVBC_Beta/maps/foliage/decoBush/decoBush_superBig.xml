<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="bush" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_shopItem_bush</name>
        <functions>
            <function>$l10n_function_foliage</function>
        </functions>
        <image>$data/foliage/decoBush/store_decoBush_superBig.dds</image>

        <price>125</price>
        <dailyUpkeep>0</dailyUpkeep>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>placeableMisc</category>
        <canBeSold>true</canBeSold>
        <showInStore>true</showInStore>

        <vertexBufferMemoryUsage>0</vertexBufferMemoryUsage>
        <indexBufferMemoryUsage>0</indexBufferMemoryUsage>
        <textureMemoryUsage>0</textureMemoryUsage>
        <instanceVertexBufferMemoryUsage>0</instanceVertexBufferMemoryUsage>
        <instanceIndexBufferMemoryUsage>0</instanceIndexBufferMemoryUsage>

        <brush>
            <type>foliage</type>
            <category>landscaping</category>
            <tab>plants</tab>
            <parameters>
                <parameter>decoBush</parameter> <!-- foliage layer name -->
                <parameter>4</parameter> <!-- value -->
            </parameters>
        </brush>

        <storeIconRendering>
            <settings centerIcon="true"/>
            <objectBundle>
                <object filename="$data/foliage/decoBush/decoBush.i3d">
                    <node node="0|0|3" translation="0 0 0" rotation="0 0 0" scale="1 1 1"/>
                </object>
            </objectBundle>
        </storeIconRendering>
    </storeData>

    <!-- Used only for store icon generation and store item. Does not use this i3d reference in-game. -->
    <base>
        <filename>$data/foliage/decoBush/decoBush.i3d</filename>
    </base>

</placeable>
